<Window x:Class="PracticeShop.WindowAddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeShop"
        mc:Ignorable="d"
        Title="WindowAddProduct" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <DockPanel Margin="5">
                <Label Content="Название" Width="100"></Label>
                <TextBox Name="tbNameAddProduct"></TextBox>
            </DockPanel>

            <DockPanel Margin="5">
                <Label Content="Ед. измерения" Width="100"></Label>
                <ComboBox Name="cbAddUnit" DisplayMemberPath="Name"></ComboBox>
            </DockPanel>
        </StackPanel>
        <Button Content="Добавить" Background="White" VerticalAlignment="Bottom" Margin="5 0 5 10" Click="Button_Click"></Button>
    </Grid>
</Window>
